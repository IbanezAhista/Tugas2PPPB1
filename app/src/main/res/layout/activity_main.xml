<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@drawable/background"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txt_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/playlist_name"
        android:layout_centerHorizontal="true"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/white" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_keyboard_arrow_down_24"
        android:layout_alignBottom="@id/txt_title"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_more_vert_24"
        android:layout_alignBottom="@id/txt_title"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:id="@+id/img_poster"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_below="@+id/txt_title"
        android:layout_marginTop="80dp"
        android:src="@drawable/poster"
        android:textColor="@color/white"
        android:importantForAccessibility="no" />

    <TextView
        android:id="@+id/txt_song_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_poster"
        android:layout_marginTop="80dp"
        android:text="@string/song_name"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/white" />

    <ImageView
        android:id="@+id/txt_button"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_below="@+id/img_poster"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="87dp"
        android:src="@drawable/baseline_control_point_24" />

    <TextView
        android:id="@+id/txt_singer_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_song_name"
        android:layout_marginTop="2dp"
        android:textColor="@color/white"
        android:text="@string/singer_name"/>

    <ImageView
        android:id="@+id/ic_slider"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_singer_name"
        android:layout_marginTop="2dp"
        android:src="@drawable/slider" />

</RelativeLayout>